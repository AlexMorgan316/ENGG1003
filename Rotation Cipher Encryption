#include <stdio.h>
#include <string.h>

int main () {
    
char msg1[1000], ch;
int i, key;

printf("\nEnter message to encrypt: ");               
scanf("%[^\n]s", msg1);

printf("\nEnter key/rotation amount: ");
scanf("%d", &key);

for(i=0; i<strlen(msg1); i++) {
    
    ch=msg1[i];
    if(ch>=97 && ch<=122) {
        
        ch=ch+key;
        if(ch<97) {
            
            ch=ch-26;
        }
    }
    if(ch>=65 && ch<=90) {

        ch=ch+key;
        if(ch<65) {

            ch=ch-26;
        }
        if(ch>=91) {
            
            ch=ch-26;
        }
    }
    if(ch>=0 && ch<=64) {
        
        ch=ch;
    }

    msg1[i]=ch;
}
printf("\nEncrypted message: %s", msg1);
return 0; 
}