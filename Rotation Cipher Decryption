#include <stdio.h>
#include <string.h>

int main () {
    
char msg2[1000], ch;
int i, key;
                         
printf("Enter messsage to decrypt: ");
scanf(" %[^\n]", msg2);

printf("\nEnter key/rotation amount: ");
scanf("%d", &key);

for(i=0; i<strlen(msg2); i++) {
                
    ch=msg2[i];
    if(ch>=97 && ch<=122) {
    
        ch=ch-key;
        if(ch<97) {
                    
            ch=ch+26;
        }
    }
    if(ch>=65 && ch<=90) {
    
        ch=ch-key;
        if(ch<65) {
            
            ch=ch+26;
        }

        if(ch>=91) {
        
            ch=ch+26;
        }                        
    }
    if(ch>=0 && ch<=64) {
        
        ch=ch;
    }

    msg2[i]=ch;
}          
printf("\nDecrypted message: %s", msg2);
return 0;
}